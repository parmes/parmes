\begin_inset Formula $\mathbf{n}=\mathbf{n}+b\cdot\text{normal}\left(t_{i}\right)$
\end_inset


\end_layout

\begin_layout LyX-Code
5    else 
\begin_inset Formula $\mathbf{n}=\mathbf{n}-b\cdot\text{normal}\left(t_{i}\right)$
\end_inset


\end_layout

\begin_layout LyX-Code
